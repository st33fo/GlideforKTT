<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    >


<android.support.v7.widget.CardView android:id="@+id/threadcv"
xmlns:app="http://schemas.android.com/apk/res-auto"


app:cardElevation="2dp"
app:cardUseCompatPadding="true"
app:cardMaxElevation="1dp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/toplayoutformain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/threadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime &amp; Manga Thread Trinity Seven Movie in the Works"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middlelayoutformain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplayoutformain">

        <TextView
            android:text="TV &amp; Films"
            android:id="@+id/section"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="•"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moodie"
            android:id="@+id/person"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="•"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/latest_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:text="Last Post by OST  3 minutes ago"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/middlelayoutformain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/threadtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                >

                <ImageView
                    android:id="@+id/replyicon"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_reply_grey600_18dp" />

                <TextView
                    android:text="145034"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp"
                    android:id="@+id/replies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp" />

                <ImageView
                    android:id="@+id/viewicon"
                    android:src="@drawable/ic_eye_grey600_18dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextSecondary"

                    android:text="550520"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="2dp" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </LinearLayout>
</RelativeLayout>

</android.support.v7.widget.CardView></RelativeLayout>

